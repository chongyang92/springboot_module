<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!--本机驱动地址-->
    <classPathEntry location="D:\newmavenLocalRepo\mysql\mysql-connector-java\8.0.18\mysql-connector-java-8.0.18.jar" />

    <context id="MYSQLTables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/no_rbac?serverTimezone=UTC"
                        userId="root"
                        password="123456">
            <!--防止mybatis去数据库查其他库中的同名表，指定为当前no_rbac数据库中的表生成相关类-->
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.weboot.springboot.domain" targetProject="src/main/java">
            <!--<property name="enableSubPackages" value="true" />-->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper"  targetProject="src/main/resources">
            <!--<property name="enableSubPackages" value="true" />-->
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.weboot.springboot.mapper"  targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!--<table tableName="org" domainObjectName="Org">
            <property name="useActualColumnNames" value="true"/>
            <generatedKey column="ID" sqlStatement="DB2" identity="true" />
            <columnOverride column="DATE_FIELD" property="startDate" />
            <ignoreColumn column="FRED" />
            <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />
        </table>-->

        <!--<table tableName="org" domainObjectName="Org"/>
        <table tableName="user" domainObjectName="User"/>
        <table tableName="menu" domainObjectName="Menu"/>
        <table tableName="path" domainObjectName="Path"/>-->
        <table tableName="user_menu" domainObjectName="UserMenu"/>
        <table tableName="user_path" domainObjectName="UserPath"/>

    </context>
</generatorConfiguration>